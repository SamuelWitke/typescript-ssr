{
	"compilerOptions": {
		"outDir": "./built/",
		"module": "commonjs",
		"target": "es2015",
		"typeRoots": [
			"./node_modules/@types",
			"./typings/"
		],
		"lib": [
			"dom",
			"dom.iterable",
			"es6",
			"es2017"
		],
		"target": "es5",
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true
	},
	"include": [
		"./src/**/*"
		],
		"exclude": [
			"node_modules"
		]
}
